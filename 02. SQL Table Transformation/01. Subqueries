#Non-Correlated Subqueries is a subquery that can be run independently of the outer query and as we saw, can be used to complete a multi-step transformation

SELECT *
FROM flights
WHERE origin in (
		SELECT code
		FROM airports
		WHERE elevation < 2000);
    
SELECT a.dep_month,
       a.dep_day_of_week,
       AVG(a.flight_distance) AS average_distance
  FROM (
        SELECT dep_month,
              dep_day_of_week,
               dep_date,
               sum(distance) AS flight_distance
          FROM flights
         GROUP BY 1,2,3
       ) a
 GROUP BY 1,2
 ORDER BY 1,2;
 
 #Correlated Subqueries 
